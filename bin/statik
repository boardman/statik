#!/usr/bin/env node

var nopt = require('nopt');
var path = require('path');
var known = {
	"port": Number,
	"maxAge": Boolean,
	"hidden": Boolean,
	"redirect": Boolean
};
var options = nopt(known);
if (options.argv.remain[0] !== undefined)
	options.root = path.resolve(options.argv.remain[0]);

var statik = require('../index');
var server = statik(options);
